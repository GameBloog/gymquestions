{
  "name": "api-gym",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.json src/server.ts",
    "build": "tsup src --out-dir dist",
    "build:prod": "pnpm run build && pnpm run db:migrate:deploy",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "migrate:answers": "tsx script/migrate-user-answer.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:unit:watch": "vitest --config vitest.unit.config.ts",
    "test:e2e": "NODE_ENV=test vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "NODE_ENV=test vitest --config vitest.e2e.config.ts",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "db:test:start": "docker compose -f docker-compose.test.yml up -d",
    "db:test:stop": "docker compose -f docker-compose.test.yml down",
    "db:test:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "db:test:push": "dotenv -e .env.test -- prisma db push",
    "db:test:seed": "dotenv -e .env.test -- tsx prisma/seed.ts",
    "db:test:reset": "docker compose -f docker-compose.test.yml down -v && docker compose -f docker-compose.test.yml up -d && sleep 3 && dotenv -e .env.test -- prisma migrate deploy && dotenv -e .env.test -- prisma db seed",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "postinstall": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.1",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^7.4.2",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.16.2",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "bcryptjs": "^3.0.3",
    "fastify": "^5.6.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.12"
  }
}
