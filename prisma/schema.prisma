generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  PROFESSOR
  ALUNO
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  nome      String
  role      UserRole @default(ALUNO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  professorProfile Professor?
  alunoProfile     Aluno?
  historicosRegistrados AlunoHistorico[] @relation("RegistradoPor")

  @@map("users")
}

model InviteCode {
  id        String   @id @default(uuid())
  code      String   @unique
  role      UserRole
  usedBy    String?
  usedAt    DateTime?
  expiresAt DateTime?
  createdBy String
  createdAt DateTime @default(now())

  @@map("invite_codes")
}

model Professor {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  telefone      String?
  especialidade String?
  isPadrao      Boolean  @default(false)
  
  alunos    Aluno[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("professores")
}

model Aluno {
  id          String    @id @default(uuid())
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  professorId String
  professor   Professor @relation(fields: [professorId], references: [id])
  
  telefone    String?
  alturaCm    Int?
  pesoKg      Float?
  idade       Int?
  cinturaCm   Int?
  quadrilCm   Int?
  pescocoCm   Int?
  
  alimentos_quer_diario         Json?
  alimentos_nao_comem           Json?
  alergias_alimentares          Json?
  dores_articulares             String?
  suplementos_consumidos        Json?
  dias_treino_semana            Int?
  frequencia_horarios_refeicoes String?
  
  historico   AlunoHistorico[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("alunos")
}

model AlunoHistorico {
  id                String   @id @default(uuid())
  alunoId           String
  aluno             Aluno    @relation(fields: [alunoId], references: [id], onDelete: Cascade)
  
  // Medidas corporais
  pesoKg            Float?
  alturaCm          Int?
  cinturaCm         Int?
  quadrilCm         Int?
  pescocoCm         Int?
  bracoEsquerdoCm   Float?
  bracoDireitoCm    Float?
  pernaEsquerdaCm   Float?
  pernaDireitaCm    Float?
  
  // Composição corporal
  percentualGordura Float?
  massaMuscularKg   Float?
  
  // Metadata
  observacoes       String?
  registradoPor     String
  registradoPorUser User     @relation("RegistradoPor", fields: [registradoPor], references: [id])
  dataRegistro      DateTime @default(now())
  createdAt         DateTime @default(now())

  @@index([alunoId])
  @@index([dataRegistro])
  @@map("aluno_historico")
}